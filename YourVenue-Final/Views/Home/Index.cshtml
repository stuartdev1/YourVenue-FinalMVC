@{
    ViewData["Title"] = "Home Page";
}
<head>
    <link rel="stylesheet" href="~/css/landingpage.css" />
</head>
<div class="hero-content-wrapper">
    <img src="https://apis.xogrp.com/media-api/images/260831ae-c756-4c75-a923-042c883cbcbf" alt="hero wedding picture" style="width:100%" />
    <div class="hero-content-center">
        <h1 class="hero-content__title">YourVenue</h1>
        <h2 class="hero-content__second-title">Find the perfect venue!</h2>
        <a class="search-button" asp-area="" asp-controller="Venue" asp-action="SearchVenue">
            Search for YourVenue
        </a>
    </div>
    <div class="hero-content-left">
        <h3>Our Mission</h3>
        <p>
            Your wedding day should be the best day of your life and we want to make that happen.
            Our goal is to connect you to your dream venue.
        </p>
    </div>
    <div class="hero-content-right">
        <h3>Why Choose Us?</h3>
        <p>
            We are connected to the best venues around Colorado.
            Use us to find your dream wedding venue and make the best day of your life just that much easier.
        </p>
    </div>
</div>
